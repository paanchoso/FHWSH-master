<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDEFE1E1">

    <Button
        android:id="@+id/buttonChat"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="291dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="58dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="502dp"
        android:autoLink="all"
        android:background="@drawable/ic_launcher_background"
        android:drawableEnd="@drawable/icons8_whatsapp_100"
        android:drawableBottom="?attr/colorPrimaryDark"
        android:ellipsize="none"
        android:text="Press to Join" />

    <TextView
        android:id="@+id/textChat"
        android:layout_width="339dp"
        android:layout_height="53dp"
        android:layout_alignStart="@+id/buttonChat"
        android:layout_alignLeft="@+id/buttonChat"
        android:layout_alignTop="@+id/buttonChat"
        android:layout_alignEnd="@+id/buttonChat"
        android:layout_alignRight="@+id/buttonChat"
        android:layout_marginStart="-24dp"
        android:layout_marginLeft="-24dp"
        android:layout_marginTop="-312dp"
        android:layout_marginEnd="-24dp"
        android:layout_marginRight="-24dp"
        android:ellipsize="none"
        android:text="We are on Whatsapp "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textIsSelectable="false"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="sans" />

</RelativeLayout>